{
  "compilerOptions": {
    "target": "ES2022", // Or a recent ES version supported by your Node.js runtime
    "module": "NodeNext", // Or "NodeNext" for Node.js 16+ for better interoperability
    "moduleResolution": "NodeNext", // Or "Node16" for Node.js 16+
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
}
